<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="test.bwei.com.platform.activity.LandRActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y320"
        android:layout_marginBottom="@dimen/y30"
        android:scaleType="fitXY"
        android:src="@mipmap/logo" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginRight="@dimen/x40"
            android:src="@mipmap/yh" />

        <EditText
            android:id="@+id/userid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y60"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:background="@drawable/whitebg"
            android:hint="请输入手机号码"
            android:textSize="@dimen/x30" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:background="#c8c8c8"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/y100"
        android:layout_below="@+id/imageView"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginRight="@dimen/x40"
            android:src="@mipmap/yzm" />

        <EditText
            android:id="@+id/psd"
            android:layout_width="@dimen/x415"
            android:layout_height="@dimen/y60"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:background="@drawable/whitebg"
            android:hint="输入短信验证码"
            android:textSize="@dimen/x30" />

        <Button
            android:id="@+id/yzmbtn"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/y60"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x60"
            android:background="@drawable/dlbackgroud"
            android:text="获取验证码"
            android:textColor="#fff"
            android:textSize="@dimen/x22" />
    </RelativeLayout>

    <!-- nihao-->

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/relativeLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/y100"
        android:layout_below="@+id/imageView"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginRight="@dimen/x40"
            android:src="@mipmap/suo" />

        <EditText
            android:id="@+id/psd6"
            android:layout_width="@dimen/x415"
            android:layout_height="@dimen/y60"
            android:inputType="textPassword"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageView6"
            android:layout_toRightOf="@+id/imageView6"
            android:background="@drawable/whitebg"
            android:hint="输入登录密码"
            android:textSize="@dimen/x30" />

        <ImageView
            android:id="@+id/yzmbtn6"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/y60"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x60"
            android:src="@mipmap/eyeclose"
            android:textColor="#fff"
            android:textSize="@dimen/x22" />
    </RelativeLayout>

    <!-- nihao-->


    <RelativeLayout

        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="@dimen/y180"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:background="#c8c8c8"></RelativeLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="@dimen/x300"
        android:layout_height="@dimen/y70"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y200"
        android:background="@drawable/dlbackgroud"
        android:text="登录"
        android:textColor="#fff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y50">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/y20"
            android:text="其他登录方式"
            android:textColor="#999999"
            android:textSize="@dimen/x26" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/qqlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x40"
                android:src="@mipmap/qqicon" />

            <ImageView
                android:id="@+id/wxlogin"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/x40"
                android:layout_toEndOf="@+id/qqlogin"
                android:layout_toRightOf="@+id/qqlogin"
                android:src="@mipmap/wxicon" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/another"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="使用常规登录方式"
        android:textColor="@color/maincolor"
        android:textSize="@dimen/x20" />
</RelativeLayout>
