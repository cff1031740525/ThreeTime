<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="test.bwei.com.platform.activity.PublishVediosActivity">
<RelativeLayout
    android:background="@color/hui"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x400"
    android:id="@+id/relativeLayout11">

    <ImageView
        android:id="@+id/coverschange"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/x200"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:textColor="@color/white"
        android:textSize="@dimen/x30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coverschange"
        android:layout_centerHorizontal="true"
        android:text="点击图片更换封面" />
</RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/x300"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout11"
        android:background="@drawable/whiteblack"
        android:gravity="top"
        android:hint="请输入视屏描述"
        android:id="@+id/et_pvedio" />

    <Button
        android:text="发布"
        android:id="@+id/btn_pvedio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_pvedio" />
    <RelativeLayout
        android:id="@+id/pbrale"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ProgressBar
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
