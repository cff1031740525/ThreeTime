<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="test.bwei.com.platform.activity.SetActivity">


<LinearLayout
    android:background="@color/white"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout3">
    <RelativeLayout
        android:id="@+id/update_version"
        android:layout_marginTop="@dimen/x15"
        android:layout_marginBottom="@dimen/x15"
        android:layout_marginLeft="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:textColor="@color/gray_back"
            android:text="检查更新"
            android:textSize="@dimen/x30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_versioncode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x50"
            android:text="0.0.1"
            android:textSize="@dimen/x30" />
        <ImageView
            android:src="@drawable/more_1x"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/x30"
        android:background="@color/gray_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"></LinearLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/x15"
        android:layout_marginBottom="@dimen/x15"
        android:layout_marginLeft="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:textColor="@color/gray_back"
            android:text="意见反馈"
            android:textSize="@dimen/x30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/more_1x"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50" />
    </RelativeLayout>
</LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/x25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout3"
        android:background="@color/white"
        android:orientation="vertical"
        android:id="@+id/linearLayout4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x15"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="关于一刻钟"
                android:textColor="@color/gray_back"
                android:textSize="@dimen/x30" />

            <ImageView
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/x50"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/more_1x" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x30"
            android:background="@color/gray_back"></LinearLayout>

        <RelativeLayout
            android:id="@+id/clear_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x15"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="清除缓存"
                android:textColor="@color/gray_back"
                android:textSize="@dimen/x30" />

            <ImageView
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/x50"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/more_1x"
                android:id="@+id/imageView10" />

            <TextView
                android:id="@+id/cache_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageView10"
                android:layout_alignRight="@+id/imageView10"
                android:layout_alignTop="@+id/imageView10"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x50"
                android:text="2.22M"
                android:textSize="@dimen/x30" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/unlogin"
        android:background="@drawable/red_login"
        android:layout_marginTop="@dimen/x30"
        android:text="退出登录"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout4" />
</RelativeLayout>
